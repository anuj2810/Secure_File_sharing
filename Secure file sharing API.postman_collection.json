						{
							"name": "Files Download Link API",
							"event": [
								{
									"listen": "test",
									"script": {
										"exec": [
											"const data = pm.response.json();\r",
											"\r",
											"if (data.download_link) {\r",
											"    const link = data.download_link;\r",
											"\r",
											"    // Remove trailing slash if present\r",
											"    const cleanedLink = link.endsWith('/') ? link.slice(0, -1) : link;\r",
											"\r",
											"    // Token is the last part after last '/'\r",
											"    const token = cleanedLink.split('/').pop();\r",
											"\r",
											"    pm.collectionVariables.set(\"secure_download_token\", token);\r",
											"    console.log(\"✅ Token extracted and saved:\", token);\r",
											"} else {\r",
											"    console.log(\"❌ No download_link in response\");\r",
											"}\r",
											""
										],
